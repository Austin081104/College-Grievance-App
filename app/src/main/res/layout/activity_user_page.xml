<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.user_page"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                />


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:columnCount="2"
                app:rowCount="3"

                >

                <!-- complaint -->
                <LinearLayout
                    android:id="@+id/complaint"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/registercomplaint"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Complaint"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- view Status -->
                <LinearLayout
                    android:id="@+id/status"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:src="@drawable/viewstatus"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="View Status"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <!-- Feedback -->
                <LinearLayout
                    android:id="@+id/feedback"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="2">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"                        android:src="@drawable/feedbackregister"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <!-- FAQ -->
                <LinearLayout
                    android:id="@+id/FAQ"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="2">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:src="@drawable/faq"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <!-- WHY to ASk -->
                <LinearLayout
                    android:id="@+id/QUESTION"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="2">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:src="@drawable/whytoask"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="   Why to \nComplaint"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <!-- Analysis -->
                <LinearLayout
                    android:id="@+id/analysis"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/linearlayout"
                    android:padding="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="2">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:src="@drawable/data"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Analysis"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/menu_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include layout="@layout/nav_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>